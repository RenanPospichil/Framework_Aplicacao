@{ ViewData["Title"] = "Modelos - Tabela"; }
@model Tabela
<div class="bloco">
    <div class="row">
        <table id="tabela" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>coluna 1</th>
                    <th>coluna 2</th>
                    <th>coluna 3</th>
                    <th>coluna 4</th>
                    <th>coluna 5</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Tabela item in ViewBag.Tabela)
                {
                    <tr>
                        <td>@item.Item_1</td>
                        <td>@item.Item_2</td>
                        <td>@item.Item_3</td>
                        <td>@item.Item_4</td>
                        <td>@item.Item_5</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
        $(function () {
            $("#tabela").DataTable();
        });

        $.fn.dataTable.ext.order['dom-text'] = function (settings, col) {
            return this.api().column(col, { order: 'index' }).nodes().map(function (td, i) {
                return $('input', td).val();
            });
        }
    </script>
}
